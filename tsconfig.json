{
  "compilerOptions": {
    "outDir": "./",
    "declaration": false,
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "lib/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "example"
  ]
}